<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin_normal"
        android:layout_marginLeft="@dimen/activity_margin_large"
        android:layout_marginRight="@dimen/activity_margin_large"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:minWidth="300dp"
        android:gravity="center"
        android:background="@drawable/border_darkgray_with_white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_dailog_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin_normal"
            android:text="@string/app_name"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin_normal"
            android:layout_marginRight="@dimen/activity_margin_normal"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/text_margin_normal"
            android:minHeight="@dimen/btn_height"
            android:scrollbars="vertical"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"/>

        <ImageView
            android:scaleType="fitXY"
            android:layout_margin="@dimen/divider_height_xlarge"
            android:id="@+id/iv_banner"
            android:src="@drawable/logo"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/image_height_large" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAllCaps="true"
                android:paddingLeft="@dimen/activity_margin_normal"
                android:paddingRight="@dimen/activity_margin_normal"
                android:paddingTop="@dimen/activity_margin_normal"
                android:paddingBottom="@dimen/activity_margin_normal"
                android:text="Cancel"
                android:textColor="@color/btn_color"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/activity_margin_normal"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_margin_normal"
                android:paddingBottom="@dimen/activity_margin_normal"
                android:text="Ok"
                android:textAllCaps="true"
                android:textColor="@color/btn_color"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
