<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/ll_chat_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minWidth="100dp"
        android:layout_marginRight="@dimen/activity_margin_xxlarge"
        android:visibility="gone"
        android:background="@drawable/image">

        <LinearLayout
            android:id="@+id/ll_image_other"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:padding="5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_capture_from"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:minWidth="150dp"
                android:paddingLeft="5dp"
                android:scaleType="fitXY"
                android:visibility="visible"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_other_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Hi Deepak"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingRight="7dp"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_otherchat_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:text="12:05 pm"
            android:layout_gravity="right"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:textStyle="italic" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_chat_me"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_margin_xxlarge"
        android:layout_marginTop="5dp"
        android:background="@drawable/image_1">

        <LinearLayout
            android:id="@+id/ll_image_me"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:padding="5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_capture_me"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:minWidth="150dp"
                android:paddingRight="5dp"
                android:src="@drawable/ic_camera_gray"
                android:scaleType="fitXY"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_my_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingRight="12dp"
            android:paddingLeft="7dp"
            android:minWidth="100dp"
            android:text="How r u"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:paddingBottom="3dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_mychat_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:text="12:06 pm"
            android:textStyle="italic" />

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/single"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>